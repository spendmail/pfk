{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>

            {% for product in products %}
                <tr>
                    <td>{{ product.getId }}</td>
                    <td>{{ product.getName }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary btn-xs btn-block" href="{{ url("product-add") }}" role="button">Add</a>

{% endblock %}
